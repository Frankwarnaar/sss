<!-- views/users/login.ejs -->
<% if(error){ %>
  <div class="error">
    <%= error %>
  </div>
<% } %>
<form action="<%= postUrl %>" method="post">
  <label for="field_username">Username: </label>
  <input type="text" id="field_username" name="username" value="">
  <br />
  <label for="field_password">Password: </label>
  <input type="password" id="field_password" name="password" value="">
  <br />
  <button type="submit">Login!</button>
</form>

<p>Heeft u nog geen account? U kunt u <a href="/users/register">hier</a> registreren.</p>